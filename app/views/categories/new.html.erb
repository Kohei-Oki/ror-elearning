<% provide(:title, 'Category') %>
<h1>Category</h1>

<div class="box">
		<%= form_for(@category, url: categories_path) do |f| %>

 			<%= render "shared/error_messages", object: f.object %> 

			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_field :description, class: 'form-control' %>

			<%= f.submit "Create new category", class: "btn btn-primary" %>
			<p><%= link_to "Back to All Categories", categories_path  %></p>
		<% end %>
	
</div>