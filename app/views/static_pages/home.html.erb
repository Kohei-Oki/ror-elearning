<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | E lerning</title>
  </head>
  <body class="home">
    <% if logged_in? %>
    <div class="row">
      <aside class="col-md-3">
        <h1><%= current_user.name %></h1>
          <div class="stats">
            <p class="stat"><%= render 'shared/stats' %></p>
          </div>
      </aside>
      <aside class="col-md-9">

        <div class ="button">
          <a href="/user_words">
           <button class="btn btn-primary btn-lg">Words</button>
          </a>
        </div>
    </div>

        <div class="box">
          <h2>Activity's record</h2>
            <%= render 'shared/feed' %>    
        </div>
      </aside>
    </div>
    <% else %>

  <div class = "home_h1">
    <h1>Welcome to </h1>
    <h1>E-lerning System</h1>
  </div>
  <div class ="button">
    <a href="/users/new">
    <button class="btn btn-primary btn-lg">Sign Up</button>
    </a>
  </div>
  <% end %>
  </body>
</html>
